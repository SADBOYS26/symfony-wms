{% extends "@FOSUser/layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}Вход{% endblock %}
{% block header %}{% endblock %}
{% block footer %}{% endblock %}
{% block fos_user_content %}
    {% trans_default_domain 'FOSUserBundle' %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<div class="uk-flex uk-flex-middle uk-flex-center uk-text-center uk-height-1-1">
    <form class="uk-form login__form uk-vertical-align-middle" action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="uk-form-row">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input class="uk-input" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>
        <div class="uk-form-row">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input class="uk-input" type="password" id="password" name="_password" required="required" />
        </div>
        <div class="uk-form-row">
            <input class="uk-checkbox" type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
        <div class="uk-form-row">
            <input class="uk-button uk-button-default" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div>
    </form>
</div>
{% endblock fos_user_content %}

