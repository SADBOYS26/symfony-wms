<div id="users" class="col s12">
    <div class="card material-table">
        <div class="table-header">
            <span class="table-title">Пользователи</span>
            <div class="actions">
                <a href="#add_users" id="addRow" class="modal-trigger waves-effect btn-flat nopadding"><i class="material-icons">person_add</i></a>
                <a href="#" class="search-toggle waves-effect btn-flat nopadding"><i class="material-icons">search</i></a>
            </div>
        </div>
        <table id="datatable">
            <thead>
            <tr>
                <th>ID</th>
                <th>Имя пользователя</th>
                <th>email</th>
                <th>Роль</th>
                <th>Последний вход</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {{ user.roles|join(', ') }}
                    </td>
                    <td>
                        {{ user.lastLogin|date('d.m.Y') }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>